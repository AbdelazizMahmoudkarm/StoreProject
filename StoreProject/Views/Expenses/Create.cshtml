@model Expense

@{
    ViewData["Title"] = "Create";
}

<h4>اضافة عنصر</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form id="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Element" class="control-label"></label>
                <input id="mname" asp-for="Element" class="form-control" />
                <span asp-validation-for="Element" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pay" class="control-label"></label>
                <input id="mname" asp-for="Pay" class="form-control" />
                <span asp-validation-for="Pay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input id="mname" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-success" onclick="post('/Expenses/Create', '/Expenses/Index')">انشاء</a>
                <a href="#" class="btn btn-danger" data-dismiss="modal">الغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
