@model Category
<h5 style="margin-top:5px;color:#ff6347">تعديل الاسم </h5>
<hr />
        <form id="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <input hidden id="itemId" asp-for="CategoryId" value="@Model.CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
        <input asp-for="CategoryName" id="itemname" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Store.StoreName" class="control-label"></label>
                    <select id="storeId" asp-for="StoreId" class="form-control" asp-items="@(new SelectList(@ViewBag.stores,"StoreId", "StoreName"))">
                    </select>
            </div>
            <div class="modal-footer">
                @*<button type="reset" class="btn btn-danger" data-dismiss="modal">الغاء</button>*@
                <button onclick="post('/Items/EditName')" style="margin:5px" type="submit" class="btn btn-success">حفظ</button>
            </div>
        </form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}